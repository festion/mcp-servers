{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/dev/workspace"
      ],
      "lazyLoad": true
    },
    "serena-enhanced": {
      "command": "/home/dev/.local/bin/uv",
      "args": [
        "run",
        "--directory",
        "/home/dev/workspace/serena",
        "serena-mcp-server",
        "--transport",
        "stdio"
      ]
    },
    "home-assistant": {
      "command": "bash",
      "args": [
        "/home/dev/workspace/wrappers/home-assistant.sh"
      ],
      "lazyLoad": true
    },
    "github": {
      "command": "mcp-server-github",
      "lazyLoad": true
    },
    "code-linter": {
      "command": "bash",
      "args": [
        "/home/dev/workspace/wrappers/code-linter.sh"
      ],
      "lazyLoad": true
    },
    "truenas": {
      "command": "bash",
      "args": [
        "/home/dev/workspace/wrappers/truenas.sh"
      ],
      "lazyLoad": true
    },
    "wikijs-mcp": {
      "command": "bash",
      "args": [
        "/home/dev/workspace/wrappers/wikijs.sh"
      ],
      "lazyLoad": true
    },
    "proxmox-mcp": {
      "command": "bash",
      "args": [
        "/home/dev/workspace/wrappers/proxmox.sh"
      ],
      "lazyLoad": true
    }
  }
}