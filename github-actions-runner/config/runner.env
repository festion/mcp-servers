# GitHub Runner Configuration
GITHUB_RUNNER_TOKEN=your_runner_token_here
GITHUB_REPOSITORY_URL=https://github.com/your-org/your-repo
RUNNER_NAME=homelab-runner-01
RUNNER_WORKDIR=/tmp/runner/work
RUNNER_GROUP=default
LABELS=self-hosted,Linux,X64,homelab
RUNNER_SCOPE=repo
EPHEMERAL=false
DISABLE_AUTOMATIC_DEREGISTRATION=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/logs/runner.log
MAX_LOG_SIZE=10m
MAX_LOG_FILES=3

# Security Configuration
RUNNER_USER=runner
RUNNER_GROUP=docker
DOCKER_HOST=unix:///var/run/docker.sock

# Network Configuration
HOMELAB_NETWORK=192.168.1.0/24
HA_HOST=192.168.1.155
HA_PORT=8123