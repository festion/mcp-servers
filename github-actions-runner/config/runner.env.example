# GitHub Actions Runner Configuration Template
# Copy this file to runner.env and configure for your environment

# =============================================================================
# GITHUB CONFIGURATION
# =============================================================================

# GitHub Repository Settings (REQUIRED)
GITHUB_REPOSITORY_URL=https://github.com/your-org/your-repo
GITHUB_REPOSITORY_OWNER=your-org
GITHUB_REPOSITORY_NAME=your-repo

# Runner Identity (REQUIRED)
RUNNER_NAME=homelab-runner-01
RUNNER_GROUP=default

# Runner Labels (comma-separated)
RUNNER_LABELS=self-hosted,Linux,X64,homelab,docker

# Runner Scope (repo, org, enterprise)
RUNNER_SCOPE=repo

# Runner Behavior
EPHEMERAL=false
DISABLE_AUTOMATIC_DEREGISTRATION=false
DISABLE_RUNNER_UPDATE=false
RUNNER_ALLOW_RUNASROOT=1

# Working Directory
RUNNER_WORKDIR=/tmp/runner/work

# =============================================================================
# SECURITY AND TOKEN MANAGEMENT
# =============================================================================

# Token Management (DO NOT SET HERE - use token manager)
# RUNNER_TOKEN will be set by secure token manager
RUNNER_TOKEN_FILE=/run/secrets/github_runner_token
RUNNER_TOKEN_ROTATION_ENABLED=true
RUNNER_TOKEN_ROTATION_INTERVAL=86400

# Token Validation
RUNNER_TOKEN_VALIDATION_ENABLED=true
RUNNER_TOKEN_VALIDATION_INTERVAL=3600

# Security Settings
RUNNER_SECURITY_ENABLED=true
RUNNER_AUDIT_ENABLED=true
RUNNER_AUDIT_LOG_FILE=/var/log/runner/audit.log

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment Type (development, staging, production)
RUNNER_ENVIRONMENT=production

# Environment-specific settings
RUNNER_DEBUG=false
RUNNER_VERBOSE_LOGGING=false
RUNNER_LOG_LEVEL=INFO

# =============================================================================
# RESOURCE MANAGEMENT
# =============================================================================

# CPU and Memory Limits
RUNNER_CPU_LIMIT=2.0
RUNNER_MEMORY_LIMIT=4G
RUNNER_CPU_RESERVE=0.5
RUNNER_MEMORY_RESERVE=1G

# Disk Space Management
RUNNER_DISK_CLEANUP_ENABLED=true
RUNNER_DISK_CLEANUP_THRESHOLD=80
RUNNER_DISK_CLEANUP_INTERVAL=3600

# Job Concurrency
RUNNER_MAX_CONCURRENT_JOBS=1
RUNNER_JOB_TIMEOUT=3600

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Private Network Access
PRIVATE_NETWORK_ENABLED=true
PRIVATE_NETWORK_IP=192.168.1.155
PRIVATE_NETWORK_PORT=8123
PRIVATE_NETWORK_PROTOCOL=http

# Proxy Settings (if required)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1,172.20.0.0/16,192.168.0.0/16

# DNS Configuration
DNS_SERVERS=8.8.8.8,8.8.4.4
DNS_SEARCH_DOMAINS=local

# SSL/TLS Settings
SSL_VERIFY_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Health Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_ENDPOINT=http://localhost:8080/health

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_ENDPOINT=/metrics
METRICS_RETENTION=200h

# Log Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE=/var/log/runner/runner.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=5
LOG_COMPRESSION=gzip

# Structured Logging
STRUCTURED_LOGGING=true
LOG_INCLUDE_CALLER=true
LOG_INCLUDE_TIMESTAMP=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=gzip
BACKUP_STORAGE_PATH=/backup/storage
BACKUP_ENCRYPTION_ENABLED=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Home Assistant Integration
HA_ENABLED=true
HA_HOST=192.168.1.155
HA_PORT=8123
HA_PROTOCOL=http
HA_TOKEN_FILE=/run/secrets/ha_token
HA_VERIFY_SSL=false

# Notification Settings
NOTIFICATIONS_ENABLED=true
NOTIFICATION_WEBHOOK_URL=
NOTIFICATION_EMAIL=
NOTIFICATION_SLACK_WEBHOOK=

# External Services
EXTERNAL_MONITORING_ENABLED=false
EXTERNAL_MONITORING_URL=
EXTERNAL_LOGGING_ENABLED=false
EXTERNAL_LOGGING_URL=

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================

# Alert Thresholds
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=80
ALERT_DISK_THRESHOLD=85
ALERT_DISK_CRITICAL_THRESHOLD=95

# Alert Channels
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=
ALERT_EMAIL_TO=

ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=

ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Performance Settings
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLING_INTERVAL=60

# Cache Settings
CACHE_ENABLED=true
CACHE_SIZE=1GB
CACHE_TTL=3600

# I/O Settings
IO_BUFFER_SIZE=64KB
IO_QUEUE_DEPTH=32

# =============================================================================
# TROUBLESHOOTING AND DEBUG
# =============================================================================

# Debug Settings
DEBUG_ENABLED=false
DEBUG_LOG_REQUESTS=false
DEBUG_LOG_RESPONSES=false
DEBUG_TRACE_ENABLED=false

# Troubleshooting
TROUBLESHOOTING_MODE=false
VERBOSE_ERROR_REPORTING=false
CAPTURE_SYSTEM_INFO=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Experimental Features
FEATURE_FLAG_NEW_API=false
FEATURE_FLAG_ENHANCED_LOGGING=true
FEATURE_FLAG_ADVANCED_METRICS=true
FEATURE_FLAG_AUTO_SCALING=false

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================

# Compliance Settings
COMPLIANCE_MODE=false
AUDIT_ALL_ACTIONS=true
AUDIT_RETENTION_DAYS=90

# Data Protection
DATA_ENCRYPTION_ENABLED=false
DATA_ANONYMIZATION_ENABLED=false

# =============================================================================
# CUSTOM EXTENSIONS
# =============================================================================

# Custom Scripts
CUSTOM_SCRIPTS_ENABLED=false
CUSTOM_SCRIPTS_PATH=/opt/runner/scripts

# Plugin System
PLUGINS_ENABLED=false
PLUGINS_PATH=/opt/runner/plugins