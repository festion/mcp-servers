# Production Environment Configuration

# Deployment Settings
DEPLOY_ENV=prod
DEPLOY_HOST=prod.example.com
DEPLOY_PORT=22
DEPLOY_USER=deploy
DEPLOY_PATH=/opt/github-actions-runner
DEPLOY_INFRASTRUCTURE=true

# GitHub Configuration
GITHUB_TOKEN=${GITHUB_TOKEN}
GITHUB_ORG=your-org
GITHUB_REPO=your-repo
GITHUB_RUNNER_VERSION=2.311.0
GITHUB_RUNNER_COUNT=5
GITHUB_RUNNER_PORT=8080
GITHUB_RUNNER_LABELS=prod,self-hosted,linux,x64

# Service Configuration
MONITORING_PORT=9090
METRICS_PORT=8081
ENABLE_DEBUG=false
LOG_LEVEL=warn

# Security Settings
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/prod.crt
SSL_KEY_PATH=/etc/ssl/private/prod.key
JWT_SECRET=${JWT_SECRET_PROD}

# Storage Configuration
BACKUP_DIR=/opt/backups/github-runner
DATA_DIR=/var/lib/github-runner
LOG_DIR=/var/log/github-runner

# Database Configuration
DATABASE_URL=postgresql://user:${DB_PASSWORD}@db-cluster:5432/github_runner_prod
REDIS_URL=redis://redis-cluster:6379/0

# Resource Limits
CPU_LIMIT=8
MEMORY_LIMIT=16G
DISK_LIMIT=100G

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_RETENTION=90d
ENABLE_ALERTS=true

# Notification Settings
SLACK_WEBHOOK=${SLACK_WEBHOOK}
EMAIL_NOTIFICATIONS=true
NOTIFICATION_LEVEL=error

# Production Specific
ENABLE_HOT_RELOAD=false
ENABLE_PROFILING=false
ENABLE_TRACING=false
ENABLE_LOAD_TESTING=false

# High Availability
ENABLE_HA=true
ENABLE_AUTO_SCALING=true
HEALTH_CHECK_INTERVAL=30
READINESS_PROBE_TIMEOUT=10
LIVENESS_PROBE_TIMEOUT=30

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION=30
ENABLE_CROSS_REGION_BACKUP=true