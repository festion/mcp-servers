# Staging Environment Configuration

# Deployment Settings
DEPLOY_ENV=staging
DEPLOY_HOST=staging.example.com
DEPLOY_PORT=22
DEPLOY_USER=deploy
DEPLOY_PATH=/opt/github-actions-runner
DEPLOY_INFRASTRUCTURE=true

# GitHub Configuration
GITHUB_TOKEN=${GITHUB_TOKEN}
GITHUB_ORG=your-org
GITHUB_REPO=your-repo
GITHUB_RUNNER_VERSION=2.311.0
GITHUB_RUNNER_COUNT=3
GITHUB_RUNNER_PORT=8080
GITHUB_RUNNER_LABELS=staging,self-hosted,linux,x64

# Service Configuration
MONITORING_PORT=9090
METRICS_PORT=8081
ENABLE_DEBUG=false
LOG_LEVEL=info

# Security Settings
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key
JWT_SECRET=${JWT_SECRET_STAGING}

# Storage Configuration
BACKUP_DIR=/opt/backups/github-runner
DATA_DIR=/var/lib/github-runner
LOG_DIR=/var/log/github-runner

# Database Configuration
DATABASE_URL=postgresql://user:${DB_PASSWORD}@localhost:5432/github_runner_staging
REDIS_URL=redis://localhost:6379/1

# Resource Limits
CPU_LIMIT=4
MEMORY_LIMIT=8G
DISK_LIMIT=50G

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_RETENTION=30d
ENABLE_ALERTS=true

# Notification Settings
SLACK_WEBHOOK=${SLACK_WEBHOOK}
EMAIL_NOTIFICATIONS=true
NOTIFICATION_LEVEL=warn

# Staging Specific
ENABLE_HOT_RELOAD=false
ENABLE_PROFILING=false
ENABLE_TRACING=true
ENABLE_LOAD_TESTING=true